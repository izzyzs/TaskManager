datasource db {
    provider = "sqlite"
    url = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model Task {
    id                  Int     @id @default(autoincrement())
    name                String
    shortDescription    String?
    taskBody            String?
    isCompleted         Boolean @default(false)
    isImportant         Boolean @default(false)
    isDeleted           Boolean @default(true)
}